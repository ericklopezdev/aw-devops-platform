name: Quality & Security CI

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]

permissions:
  contents: read
  security-events: write

env:
  AWS_REGION: us-east-1
  IMAGE_NAME: aw-bootcamp-app
  SONAR_ORGANIZATION: aw-bootcamp-org
  SONAR_PROJECT_KEY: aw-bootcamp-org-key

jobs:
  # Job 1: PHP Static Analysis with PHPStan, fixing
  php-static-analysis:
    name: PHP Static Analysis
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Check for PHP project
        id: check_php
        run: |
          if [ ! -f "infra/terraform/07/php-project/composer.json" ]; then
            echo "No PHP project found, skipping..."
            echo "skip=true" >> $GITHUB_OUTPUT
          else
            echo "skip=false" >> $GITHUB_OUTPUT
          fi

      - name: Setup PHP
        if: steps.check_php.outputs.skip == 'false'
        uses: shivammathur/setup-php@v2
        with:
          php-version: '8.2'
          extensions: mbstring, xml, gd

      - name: Install dependencies
        if: steps.check_php.outputs.skip == 'false'
        working-directory: ./infra/terraform/07/php-project
        run: composer install --no-interaction --prefer-dist

      - name: Run PHPStan
        if: steps.check_php.outputs.skip == 'false'
        working-directory: ./infra/terraform/07/php-project
        run: vendor/bin/phpstan analyse src --level=7 --no-progress

      - name: Upload PHPStan results
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: phpstan-report
          path: infra/terraform/07/php-project/phpstan-report/
          retention-days: 7

  # Job 2: SonarCloud Static Analysis
  sonarcloud-analysis:
    name: SonarCloud Analysis
    runs-on: ubuntu-latest
    needs: php-static-analysis
    if: always()

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: SonarQube Scan
        uses: sonarsource/sonarcloud-github-action@master
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
        with:
          args: >
            -Dsonar.organization=${{ env.SONAR_ORGANIZATION }}
            -Dsonar.projectKey=${{ env.SONAR_PROJECT_KEY }}
            -Dsonar.sources=infra/terraform/07/php-project/src
            -Dsonar.language=php

  # Job 3: Container Scanning with Trivy
  container-security-scan:
    name: Container Security Scan
    runs-on: ubuntu-latest
    needs: [php-static-analysis, sonarcloud-analysis]
    if: always()

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Build Docker image
        uses: docker/build-push-action@v5
        with:
          context: ./infra/terraform/07/php-project
          load: true
          tags: ${{ env.IMAGE_NAME }}:${{ github.sha }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Scan image with Trivy
        uses: aquasecurity/trivy-action@master
        with:
          image-ref: ${{ env.IMAGE_NAME }}:${{ github.sha }}
          format: 'sarif'
          output: 'trivy-results.sarif'
          severity: 'CRITICAL,HIGH'
          exit-code: '1'

      - name: Upload Trivy results
        uses: github/codeql-action/upload-sarif@v3
        if: always()
        with:
          sarif_file: trivy-results.sarif

      - name: Display Trivy scan results
        if: always()
        run: |
          echo "Trivy scan completed"
          cat trivy-results.sarif | jq -r '.runs[0].results // [] | length' || echo "No issues found"

  # Job 4: Retrieve configuration from SSM (application deployment)
  retrieve-ssm-config:
    name: Retrieve SSM Configuration
    runs-on: ubuntu-latest
    needs: container-security-scan
    if: github.ref == 'refs/heads/main' && always()
    outputs:
      db_password: ${{ steps.ssm.outputs.db_password }}
      api_key: ${{ steps.ssm.outputs.api_key }}

    steps:
      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ env.AWS_REGION }}

      - name: Retrieve SSM parameters
        id: ssm
        run: |
          DB_PASSWORD=$(aws ssm get-parameter --name "/aw-bootcamp/dev/database/password" --with-decryption --query "Parameter.Value" --output text)
          API_KEY=$(aws ssm get-parameter --name "/aw-bootcamp/dev/api/key" --with-decryption --query "Parameter.Value" --output text)
          echo "db_password=$DB_PASSWORD" >> $GITHUB_OUTPUT
          echo "api_key=$API_KEY" >> $GITHUB_OUTPUT
        env:
          DB_PASSWORD: ${{ secrets.DB_PASSWORD }}
          API_KEY: ${{ secrets.API_KEY }}

      - name: Verify configuration
        run: |
          echo "Database password retrieved: ${#DB_PASSWORD} characters"
          echo "API key retrieved: ${#API_KEY} characters"

  # Job 5: Quality Gate (all checks must pass)
  quality-gate:
    name: Quality Gate
    runs-on: ubuntu-latest
    needs: [php-static-analysis, sonarcloud-analysis, container-security-scan]
    if: always()

    steps:
      - name: Check quality gates
        run: |
          # Fail if any critical job failed
          if [[ "${{ needs.php-static-analysis.result }}" == "failure" ]]; then
            echo "[ERROR] PHP Static Analysis failed"
            exit 1
          fi

          if [[ "${{ needs.sonarcloud-analysis.result }}" == "failure" ]]; then
            echo "[ERROR] SonarCloud Quality Gate failed"
            exit 1
          fi

          if [[ "${{ needs.container-security-scan.result }}" == "failure" ]]; then
            echo "[ERROR] Container Security Scan found critical vulnerabilities"
            exit 1
          fi

          echo "[SUCCESS] All quality and security checks passed"
