name: Build & Push FastAPI Image

on:
  push:
    branches: [ "main" ]
    paths:
    - "docs/advanced-bootcamp/15-day-argocd/app/**"
    - "docs/advanced-bootcamp/15-day-argocd/Dockerfile"

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      packages: write
    steps:
      - uses: actions/checkout@v4

      - name: Log in to GHCR
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build & Push
        working-directory: docs/advanced-bootcamp/15-day-argocd
        run: |
          IMAGE=ghcr.io/${{ github.repository_owner }}/py-hello:latest
          docker build -t $IMAGE .
          docker push $IMAGE
